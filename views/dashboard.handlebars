<div class="container" style="margin-top: 5%;text-align: center;">
    <h1 id="business_name">Tech Blog Posts</h1>

    <div class="row" style="margin-top: 5%;">
        <div class="col-sm-11">
            <ul class="list-group">
                {{#each posts as |post| }}

                <div class="card" style="width: 18rem; float:none; margin: 0 auto; margin-bottom:10px;">
                    <div class="card-body">
                        <h5 class="card-title">{{post.title}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">By <a
                                href="user{{post.OP.user_id}}">{{post.OP.username}}</a></h6>
                        <p class="card-text">{{post.content}}</p>
                    </div>
                    {{#each comments as |comment|}}
                    <div class="card" style="width: 18rem; float:none; margin: 0 auto; margin-bottom:10px;">
                        <div class="card-body">
                            <h6 class="card-title">{{comment.content}}</h6>
                            <h7 class="card-subtitle mb-2 text-muted">By <a href="user/{{comment.commenter.user_id}}">
                                    {{comment.commenter.username}}</a></h7>
                        </div>
                    </div>
                    {{/each}}
                    <form style="margin-left: 3%;" class="formSub" id="{{post.post_id}}">
                        <div class="form-group" style="margin-top: 5%;">
                            <h6>Leave a comment:</h6>
                            <textarea class="form-control" name="review" id="comment" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary" id="{{post.post_id}}"
                            style="margin-top: 3%;">Submit</button>
                    </form>
                </div>
                <br>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
{{#if loggedIn}}
<script src="js/createComment.js"></script>
{{/if}}